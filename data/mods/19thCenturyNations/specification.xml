<freecol-specification id="19thCenturyNations">
  <european-nation-types>
    <european-nation-type id="model.nationType.ref" preserve="true">
      <!-- Shorten REF sail time. -->
      <modifier id="model.modifier.sailHighSeas"
                type="additive" value="-1"/>
    </european-nation-type>
  </european-nation-types>

  <nations>
    <nation id="model.nation.belgium" color="0xaa710c"
            nation-type="model.nationType.trade" selectable="true"
            preferred-latitude="40" ref="model.nation.belgiumREF"/>
    <nation id="model.nation.italy" color="0x74d496"
            nation-type="model.nationType.naval" selectable="true"
            preferred-latitude="25" ref="model.nation.italyREF"/>
    <nation id="model.nation.otomanempire" color="0x842525"
            nation-type="model.nationType.conquest" selectable="true"
            preferred-latitude="80" starts-on-east-coast="false" 
ref="model.nation.otomanempireREF"/>
    <nation id="model.nation.holygermanempire" color="0xAEAEAE"
            nation-type="model.nationType.building" selectable="true"
            preferred-latitude="30"
ref="model.nation.holygermanempireREF"/>
    <nation id="model.nation.belgiumREF" color="0x93620a"
            nation-type="model.nationType.ref"/>
    <nation id="model.nation.italyREF" color="0x6BBB87"
            nation-type="model.nationType.ref"/>
    <nation id="model.nation.otomanempireREF" color="0x782020"
            nation-type="model.nationType.ref"/>
    <nation id="model.nation.holygermanempireREF" color="0x949494"
            nation-type="model.nationType.ref"/>
  </nations>
</freecol-specification>
